<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LectureFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lecture_frag_txtview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:textColor="@color/fui_bgGitHub"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lecttitle_frag_txtview" />

            <TextView
                android:id="@+id/lecttitle_frag_txtview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/title_bkg"
                android:paddingLeft="@dimen/title_pad"
                android:paddingTop="@dimen/title_pad"
                android:paddingRight="@dimen/title_pad"
                android:paddingBottom="@dimen/title_pad"
                android:textAlignment="center"
                android:textColor="@color/browser_actions_bg_grey"
                android:textSize="@dimen/title_case"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</FrameLayout>
